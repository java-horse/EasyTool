<idea-plugin>
    <id>easy.char</id>
    <name>EasyChar</name>
    <vendor email="3468449362@qq.com" url="https://gitee.com/milubin/easy-char">mabin</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
      <h3>EasyChar is a set of development assistance tools for converting and translating Chinese and English characters</h3>
      <ul>
        <li>Support automatic conversion of Chinese characters to English characters</li>
        <li>Support mutual translation between Chinese and English, and supports setting up multiple translation engines</li>
        <li>Support text right-click to access web shortcut search</li>
      </ul>
	  <h3>EasyChar是一个中英字符互转、互译的开发辅助工具集</h3>
      <ul>
        <li>支持中文字符自动转为英文字符</li>
        <li>支持中英文互译，且支持设置多种翻译引擎</li>
        <li>支持文本选中右键进入web快捷搜索</li>
      </ul>
      <h3>Source</h3>
      <ul>
        <li><a href="https://gitee.com/milubin/easy-char">Gitee</a></li>
        <li><a href="https://gitee.com/milubin/easy-char">Github</a></li>
      </ul>
    ]]>
    </description>

    <change-notes>
        <![CDATA[
      <h3>v1.0.3</h3>
      <ul>
          <li>Support for text translation between Chinese and English</li>
          <li>Support for visual settings of translation engines</li>
      </ul>
      <h3>v1.0.2</h3>
      <ul>
          <li>Open the project and pop up a warm reminder</li>
      </ul>
      <h3>v1.0.1</h3>
      <ul>
          <li>Add conversion statistics function in the plugin</li>
      </ul>
      <h3>v1.0.0</h3>
      <ul>
          <li>Plugin initialization, supporting basic Chinese character replacement processing</li>
      </ul>
    ]]>
    </change-notes>

    <idea-version since-build="222.3345.118" until-build="232.*"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="easy.config.translate.TranslateConfigComponent" order="first"/>
        <applicationService serviceImplementation="easy.service.TranslateService"/>

        <applicationConfigurable id="easy.char.settings" displayName="EasyChar"
                                 instance="easy.settings.ConvertConfigurable"/>
        <applicationConfigurable parentId="easy.char.settings" id="easy.char.translate.settings" displayName="Translate"
                                 instance="easy.settings.TranslateSettingConfigurable"/>

        <toolWindow id="EasyChar" secondary="true" anchor="bottom" icon="AllIcons.Actions.ForceRefresh"
                    canCloseContents="false" factoryClass="easy.config.SidebarConfig"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>easy.init.EasyCharInit</implementation-class>
        </component>
    </application-components>

    <actions>
        <!--工具栏快捷菜单-->
        <group id="easy.char.tool.actions" text="EasyChar" icon="AllIcons.Actions.ForceRefresh"
               description="Chinese character replacement plugin" popup="true">
            <separator/>
            <group id="EasyCharToolSubGroup"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="EasyChatWeChatOfficialAccount" icon="AllIcons.CodeWithMe.CwmAccessOn"
                    class="easy.action.WeChatOfficialAction" text="微信公众号"/>
        </group>
        <!--中英字符互转-->
        <action id="EasyCharCoreAction" class="easy.action.ConvertAction" text="EasyCharCore"
                description="EasyCharCore"/>
        <!--中英互译-->
        <group id="easy.char.editor.actions" text="EasyChar" description="EasyChatTranslate"
               icon="AllIcons.Actions.ForceRefresh" popup="true">
            <separator/>
            <group id="EasyCharEditorSubGroup"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action id="EasyCharTranslateAction" class="easy.action.TranslateAction" text="Translate"
                    description="Translation between Chinese and English" icon="AllIcons.Actions.Refresh">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH"/>
                <keyboard-shortcut keymap="$default" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl BACK_SLASH"/>
            </action>
        </group>

    </actions>

    <!--<projectListeners>-->
    <!--    <listener class="easy.listener.ProjectActiveListener"-->
    <!--              topic="com.intellij.openapi.project.ProjectManagerListener"/>-->
    <!--</projectListeners>-->

</idea-plugin>
