    <idea-version since-build="222.3345.118" until-build="232.*"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="easy.config.translate.TranslateConfigComponent" order="first"/>
        <applicationService serviceImplementation="easy.service.TranslateService"/>

        <applicationConfigurable id="easy.char.settings" displayName="EasyChar"
                                 instance="easy.settings.ConvertConfigurable"/>
        <applicationConfigurable parentId="easy.char.settings" id="easy.char.translate.settings" displayName="Translate"
                                 instance="easy.settings.TranslateSettingConfigurable"/>

        <toolWindow id="EasyChar" secondary="true" anchor="right" icon="easy.icons.EasyIcons.ICON.TOOL_LOGO"
                    canCloseContents="true" factoryClass="easy.config.SidebarConfig"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>easy.init.EasyCharInit</implementation-class>
        </component>
    </application-components>

    <actions>
        <!--中英字符互转-->
        <action id="EasyCharCoreAction" class="easy.action.ConvertAction" text="EasyCharCore"
                description="EasyCharCore">
        </action>
        <!--中英互译-->
        <action id="EasyCharTranslateAction" class="easy.action.TranslateAction" text="Translate"
                description="Translation between Chinese and English" icon="easy.icons.EasyIcons.ICON.TRANSLATE">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta BACK_SLASH"/>
            <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl BACK_SLASH"/>
        </action>
        <!--驼峰命名-->
        <action id="EasyCharCamelCaseAction" class="easy.action.CamelCaseAction" text="CamelCase"
                description="SnakeCase to CamelCase" icon="easy.icons.EasyIcons.ICON.TEXT">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt BACK_SLASH"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl alt BACK_SLASH"/>
        </action>
        <!--WebSearch在线搜索-->
        <group id="EasyCharWebSearchDynamicActions" class="easy.action.search.DynamicWebSearchActionGroup"
               text="WebSearch" description="EasyChar development assistance tools"
               icon="easy.icons.EasyIcons.ICON.WEB" popup="true" compact="true"/>
        <!--快捷生成serialVersionUID-->
        <action id="EasyCharSerialAction" class="easy.action.SerialVersionUIDAction" text="GenUID"
                description="generate UID" icon="easy.icons.EasyIcons.ICON.COMMON">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt BACK_SLASH"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta shift alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta shift alt BACK_SLASH"/>
            <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl shift alt BACK_SLASH"/>
        </action>
        <!--自动生成 Swagger2.x 注解-->
        <action id="EasyCharSwaggerToolAction" class="easy.action.SwaggerAction" text="GenSwagger"
                description="EasyChar development assistance tools" icon="easy.icons.EasyIcons.ICON.SWAGGER">
        </action>
        <!--自动复制完整接口URL-->
        <action id="EasyCharCopyFullAction" class="easy.action.CopyFullUrlAction" text="CopyUrl"
                description="EasyChar development assistance tools" icon="easy.icons.EasyIcons.ICON.COPY">
        </action>

        <!--工具栏快捷菜单-->
        <group id="easy.char.tool.actions" class="easy.action.tool.DynamicToolWindowActionGroup"
               text="EasyChar" icon="easy.icons.EasyIcons.ICON.LOGO" description="EasyChar development assistance tools"
               popup="true" compact="true">
            <group id="EasyCharToolSubGroup"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
        <!--编辑器右键菜单-->
        <group id="easy.char.editor.actions" text="EasyChar" description="EasyChar development assistance tools"
               icon="easy.icons.EasyIcons.ICON.LOGO" popup="true" compact="true">
            <separator/>
            <group id="EasyCharEditorSubGroup"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <reference ref="EasyCharTranslateAction"/>
            <reference ref="EasyCharSwaggerToolAction"/>
            <reference ref="EasyCharCopyFullAction"/>
            <reference ref="EasyCharCamelCaseAction"/>
            <reference ref="EasyCharSerialAction"/>
            <reference ref="EasyCharWebSearchDynamicActions"/>
        </group>
        <!--控制台右键菜单-->
        <group id="easy.char.console.actions" text="EasyChar" description="EasyChar development assistance tools"
               icon="easy.icons.EasyIcons.ICON.LOGO" popup="true" compact="true">
            <separator/>
            <group id="EasyCharConsoleSubGroup"/>
            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>
            <reference ref="EasyCharTranslateAction"/>
            <reference ref="EasyCharWebSearchDynamicActions"/>
        </group>

    </actions>

